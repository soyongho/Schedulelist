<h1 class="ms-5 ps-5 pt-2">スケジュール編集</h1>

<div class="d-flex row pt-4">
  <div class="offset-1 col-4">
  <%= form_with(model: @schedule) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div><%= f.text_area :content, class: 'form-control', rows: 5 %></div>
    <div class="mt-3"><%= f.datetime_field :start_datetime %></div>
    <div class="mt-3"><%= f.datetime_field :finish_datetime %></div>
    <div class="mt-3"><%= f.submit '登録', class: 'btn btn-primary w-100' %></div>
  <% end %>
  </div>
  <div class="offset-4 col-3 pt-5">
    <div class="pt-5"></div>
    <div class="pt-5"></div>
    <div class="pt-5"></div>
    <div class="pt-5"></div>
    <div class="pt-5"></div>
    <div class="pt-5"><%= link_to "削除", @schedule, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-lg w-50' %></div>
  </div>
</div>